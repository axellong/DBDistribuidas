<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration SYSTEM "classpath://org/hibernate/hibernate-configuration-3.0.dtd">

<!--MYSQL -->
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;database=bdsec</property>
        <property name="hibernate.connection.username">usuario1</property>
        <property name="hibernate.connection.password">Acoco</property>
        <property name="hibernate.connection.pool_size">10</property>
        <property name="show_sql">false</property>
        <property name="dialect"> org.hibernate.dialect.SQLServerDialect</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping resource="hibernate/User.hbm.xml" />



    </session-factory>
</hibernate-configuration>


